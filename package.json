{
  "name": "traveller-combat",
  "version": "0.71.0",
  "description": "Traveller Combat VTT - Multiplayer space combat tracker",
  "main": "server.js",
  "scripts": {
    "start": "node lib/operations/reset-db.js && node server.js",
    "start:fresh": "lsof -t -i:3000 | xargs kill -9 2>/dev/null || true && npm run db:reset && npm run start",
    "start:quick": "lsof -t -i:3000 | xargs kill -9 2>/dev/null || true && npm run start",
    "dev": "echo '\nðŸŽ® SINGLE-PLAYER TEST MODE: http://localhost:3000/test.html\n' && node server.js",
    "test": "node tools/validate-json.js && node tests/run-all-tests.js",
    "test:unit": "node tests/run-all-tests.js",
    "test:integration": "node tests/integration/space-combat.test.js",
    "test:data": "node tools/validate-json.js",
    "test:security": "node tests/unit/xss-validation.test.js",
    "test:auth": "node tests/auth/auth-negative.test.js",
    "test:auto": "jest tests/automated --runInBand",
    "test:auto:smoke": "jest tests/automated/01-launch.test.js",
    "test:smoke": "node tests/run-all-tests.js --smoke",
    "test:fast": "FAST_TEST=1 node tests/run-all-tests.js --smoke",
    "test:watch": "nodemon --watch lib --watch tests --ext js --exec 'npm run test:smoke'",
    "test:e2e": "tests/e2e/run-with-cleanup.sh",
    "test:journey": "node tests/e2e/extended-journey.e2e.js",
    "test:journey:ui": "tests/e2e/run-with-cleanup.sh tests/e2e/extended-journey-ui.e2e.js",
    "test:journey:gorram": "node tests/e2e/extended-journey-gorram.e2e.js",
    "test:journey:gorram:ui": "tests/e2e/run-with-cleanup.sh tests/e2e/extended-journey-gorram-ui.e2e.js",
    "cleanup": "lsof -t -i:3000 | xargs kill -9 2>/dev/null || true && echo 'Port 3000 cleared'",
    "cleanup:all": "pkill -f 'node.*server.js' 2>/dev/null; pkill -f puppeteer 2>/dev/null; npm run cleanup",
    "cleanup:tests": "node tests/test-cleanup.js",
    "test:validate-registry": "node tests/automated/validate-registry.js",
    "play": "echo '\nðŸŽ® SINGLE-PLAYER TEST: http://localhost:3000/test.html\nðŸ‘¥ MULTIPLAYER: http://localhost:3000\n' && node server.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:strict": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "security:fix:force": "npm audit fix --force",
    "db:reset": "node lib/operations/reset-db.js",
    "db:reset:full": "node lib/operations/reset-db.js --full",
    "db:seed": "node lib/operations/seed-dorannia.js",
    "validate-adventure": "node scripts/validate-adventure.js",
    "validate:systems": "node scripts/generate-star-systems-v2.js --validate",
    "generate:system": "node scripts/generate-star-systems-v2.js --system",
    "generate:subsector": "node scripts/generate-star-systems-v2.js --subsector",
    "tui": "node bin/tui-menu.js",
    "demo": "node tests/e2e/helpers/combat-demo.js",
    "test:e2e:v1": "INTERFACE_PATH=/operations tests/e2e/run-with-cleanup.sh",
    "test:e2e:v2": "INTERFACE_PATH=/operations/v2 tests/e2e/run-with-cleanup.sh",
    "test:parity": "npm run test:e2e:v1 && npm run test:e2e:v2",
    "swap:to-v2": "node scripts/url-swap.js forward",
    "swap:rollback": "node scripts/url-swap.js rollback",
    "swap:status": "node scripts/url-swap.js status"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.5.0",
    "cookie": "^1.1.1",
    "cookie-parser": "^1.4.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "jszip": "^3.10.1",
    "socket.io": "^4.7.2",
    "winston": "^3.18.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.11",
    "puppeteer": "^24.29.1",
    "socket.io-client": "^4.8.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true
  }
}
